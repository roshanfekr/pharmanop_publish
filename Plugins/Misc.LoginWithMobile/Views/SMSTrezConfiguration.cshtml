@model SMSTrezConfiguration

@using Nop.Plugin.Misc.LoginWithMobile.Models

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="LoginWithMobile" asp-action="SMSTrezConfiguration" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="UserName" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="UserName" />
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Password" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="ServiceURL" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ServiceURL" />
                    <span asp-validation-for="ServiceURL"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="TrezSmsNumber" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="TrezSmsNumber" />
                    <span asp-validation-for="TrezSmsNumber"></span>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                </div>
            </div>
        </div>
    </div>
</form>
